<h2 class="page-header">Search authors</h2>
<form action="/authors" method="GET">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>
<br>
<% authors.forEach(aut => { %>
    <div><%= aut.name %></div>
    <div class="btn-row">
    <a class="btn btn-primary" href="/authors/<%= aut.id %>">View</a>
    <a class="btn btn-primary" href="/authors/<%= aut.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', 
                { url: `/authors/${aut.id}`}) %>
</div>
<% }) %>